            android:screenOrientation="fullSensor" />

        <activity
            android:name=".feature.tabs.setting.theme.ChooseThemeActivityBase"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".feature.tabs.setting.camera.ChooseCameraActivityBase"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".feature.tabs.setting.formats.SupportedFormatsActivityBase"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".feature.tabs.setting.search.ChooseSearchEngineActivityBase"
            android:configChanges="orientation|screenSize"
